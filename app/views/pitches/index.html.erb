<h1>Showing All the Pitches</h1>

<!-- Search bar  -->
<%= form_tag("/pitches", method: "post") do %>
  <%= label_tag(:q, "Search for:") %>
  <%= text_field_tag(:q) %>
  <%= submit_tag("Search") %>
<% end %>

<!-- must dynamically link back to story related to pitch -->
<ol>
<% @pitches.each do |pitch| %>
<% id = pitch.story_id %>
<%= link_to(pitch.body, story_pitch_path(pitch.story_id, pitch)) %>
</br>
<% end %>
</ol>

